@page
@model CarClubModel
@{
  ViewData["Title"] = "Car Club";
}
<h2>@ViewData["Title"]</h2>

<p>Here you can join in with our events, help raise funds and more importantly meet new people. <strong>Be part of the team.</strong></p>

@if (Model.PostSuccess)
{
  <p>Thanks, we will be in touch shortly.</p>
}
else
{
  <form method="post">
    <div class="form-group">
      <label for="name">Your name</label>
      <input asp-for="Name" type="text" class="form-control col-6" placeholder="Enter name" />
      <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label for="emailAddress">Your email address</label>
      <input asp-for="EmailAddress" type="email" class="form-control col-6" aria-describedby="emailHelp" placeholder="Enter email">
      <span asp-validation-for="EmailAddress" class="text-danger"></span>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
}

@section scripts {
  <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
  <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
